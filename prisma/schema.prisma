generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      String   @id @default(cuid())
  email   String   @unique
  name    String?
  image   String?
  createdAt DateTime @default(now())
  clients Client[]
}

model Client {
  id     String @id @default(cuid())
  name   String
  email  String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}